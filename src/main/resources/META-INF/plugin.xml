<idea-plugin>
    <id>com.github.aleksandrsl.intellijbrowserslist</id>
    <name>IntelliJ-Browserslist</name>
    <vendor>aleksandrsl</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.github.aleksandrsl.intellijbrowserslist.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.aleksandrsl.intellijbrowserslist.services.MyProjectService"/>
        <fileType name="Browserslist File"
                  implementationClass="com.github.aleksandrsl.intellijbrowserslist.BrowserslistFileType"
                  fieldName="INSTANCE" language="browserslist" extensions="browserslistrc"/>
        <lang.parserDefinition language="browserslist"
                               implementationClass="com.github.aleksandrsl.intellijbrowserslist.BrowserslistParserDefinition"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.aleksandrsl.intellijbrowserslist.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
